{
  "name": "mico-frame",
  "version": "0.0.1",
  "description": "a simple framework for koa",
  "main": "index.js",
  "keywords": [
    "koa",
    "node",
    "sql",
    "middleware",
    "descrator",
    "typescript"
  ],
  "author": "wx",
  "license": "ISC",
  "scripts": {
    "server": "npm run tslint && nodemon --watch 'src/**/*' -e ts,tsx --exec 'ts-node' ./src/server.ts",
    "start": "tsc && node bin/server.js",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "debug": "^2.6.3",
    "glob": "^7.1.3",
    "koa": "^2.2.0",
    "koa-bodyparser": "^3.2.0",
    "koa-convert": "^1.2.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-onerror": "^1.2.1",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.1",
    "loadsh": "^1.0.1",
    "mysql": "^2.16.0",
    "ramda": "^0.26.1",
    "module-alias": "^2.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^5.0.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.0.36",
    "@types/koa-static": "^4.0.0",
    "@types/koa-views": "^2.0.3",
    "@types/mysql": "^2.15.5",
    "@types/ramda": "^0.26.0",
    "jsonwebtoken": "^8.4.0",
    "koa-jwt": "^3.5.1",
    "nodemon": "^1.8.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "typescript": "^3.2.2"
  },
  "_moduleAliases": {
    "@controller": "src/controller",
    "@service": "src/service",
    "@model": "src/model",
    "@route": "src/route",
    "@utils": "src/utils",
    "@middleware": "src/middleware",
    "@decorator": "src/decorator",
    "@config": "config"
  }
}
